{% extends 'base.html.twig'%}
{% block title %}Liste des tâches{% endblock %}
{% block body %}
    <div class="content">
        <h1>Liste des tâches</h1>
        <ul>
            {% for task in tasks %}
                <li>{{ task.title }} - {{ task.status }}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock body %}